  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.29.7",
    "@deck.gl/extensions": "9.2.1",
    "@deck.gl/mesh-layers": "9.2.1",
    "@deck.gl/test-utils": "9.2.1",
    "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
    "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
    "@luma.gl/test-utils": "9.2.2",
    "@pnpm/types": "^11.1.0",
    "@probe.gl/test-utils": "^4.1.0",
    "@svitejs/changesets-changelog-github-compact": "^1.2.0",
    "esbuild": "^0.25.11",
    "esno": "^4.8.0",
    "gray-matter": "^4.0.3",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "puppeteer": "^24.25.0",
    "typescript": "^5.9.3",
    "unbuild": "^2.0.0",
    "vite": "^6.4.0",
    "vitest": "^3.2.4",
    "vitest-canvas-mock": "^0.3.3"
  },
  "devDependenciesMeta": {
    "@esbuild-plugins/node-globals-polyfill": "Necessary to run `tape` with browser-like `tape-run`.",
    "@esbuild-plugins/node-modules-polyfill": "Necessary to run `tape` with browser-like `tape-run`."
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "esbuild": "*",
        "@loaders.gl/core": "4.3.0"
      }
    },
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "@tailwindcss/oxide",
      "esbuild",
      "puppeteer"
    ]
  },
  "packageManager": "pnpm@10.18.3",
  "dependencies": {
    "@kitware/vtk.js": "^34.13.2"
  }
}
